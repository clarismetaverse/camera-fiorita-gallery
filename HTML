<html lang="it">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Camera Fiorita – Gallery</title>

<style>
  body {
    margin: 0;
    background: #0e1918;
    overflow-x: hidden;
    font-family: Arial, sans-serif;
  }

  .slider-container {
    position: relative;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    overflow: hidden;
  }

  .slider-track {
    display: flex;
    transition: transform 0.5s ease;
  }

  .slide img {
    width: 100vw;
    height: 80vh;
    object-fit: cover;
  }

  .nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255,255,255,0.25);
    border: none;
    color: white;
    font-size: 40px;
    padding: 10px 18px;
    cursor: pointer;
    border-radius: 50px;
    backdrop-filter: blur(6px);
  }

  .nav-btn:hover {
    background: rgba(255,255,255,0.45);
  }

  #prevBtn { left: 20px; }
  #nextBtn { right: 20px; }

  .dots {
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255,255,255,0.4);
    cursor: pointer;
  }

  .dot.active {
    background: white;
  }
</style>

</head>
<body>

<div class="slider-container">
  <div class="slider-track" id="sliderTrack"></div>

  <button id="prevBtn" class="nav-btn">‹</button>
  <button id="nextBtn" class="nav-btn">›</button>

  <div class="dots" id="dotsContainer"></div>
</div>

<script>
  const images = [
    "https://drive.google.com/uc?export=view&id=1eKl5A_VumFDVeXTc_OveJ9z4BlsNYyT-",
    "https://drive.google.com/uc?export=view&id=14mMoNN-uiaN93ib_uuOr-VN6VHx1gctp",
    "https://drive.google.com/uc?export=view&id=1q8PNpBwOvnJtyU6WVKONEZWcYdCaFnmb",
    "https://drive.google.com/uc?export=view&id=1UfT8BwvklQxlz7N3OxoF2PxnauKpOJBP",
    "https://drive.google.com/uc?export=view&id=1Ih_eIruN1sKYhewHG0Ar3mZXBx8ySRNL",
    "https://drive.google.com/uc?export=view&id=1GOgKXKAM3UrNwo-hitsyc7YdKUVEeCRq",
    "https://drive.google.com/uc?export=view&id=1W6Y0VrdQKvpHedHp1F4WxWSpMIgtYAsx",
    "https://drive.google.com/uc?export=view&id=13dQniqY5vCt11T45-E35QZjkTM_ey116",
    "https://drive.google.com/uc?export=view&id=10mK_Uqji3Cmh_-ti0lUjh4KJbL5xiQJg",
    "https://drive.google.com/uc?export=view&id=1G8IB6XEskoStQ1QSjM3X4NleG9NPTkOz",
    "https://drive.google.com/uc?export=view&id=1UZ3XufcpMTKFHrro_U7Pkg_vbbpUJoEK"
  ];

  const track = document.getElementById("sliderTrack");
  const dotsContainer = document.getElementById("dotsContainer");

  let index = 0;

  // Generate slides
  images.forEach((src, i) => {
    const div = document.createElement("div");
    div.className = "slide";
    div.innerHTML = `<img src="${src}" />`;
    track.appendChild(div);

    const dot = document.createElement("div");
    dot.className = "dot";
    dot.onclick = () => goToSlide(i);
    dotsContainer.appendChild(dot);
  });

  const dots = document.querySelectorAll(".dot");
  dots[0].classList.add("active");

  function updateSlider() {
    track.style.transform = `translateX(-${index * 100}vw)`;
    dots.forEach(d => d.classList.remove("active"));
    dots[index].classList.add("active");
  }

  function next() {
    index = (index + 1) % images.length;
    updateSlider();
  }

  function prev() {
    index = (index - 1 + images.length) % images.length;
    updateSlider();
  }

  function goToSlide(i) {
    index = i;
    updateSlider();
  }

  document.getElementById("nextBtn").onclick = next;
  document.getElementById("prevBtn").onclick = prev;

  // Optional autoplay
  setInterval(next, 5000);
</script>

</body>
</html>
